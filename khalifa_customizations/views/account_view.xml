<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_list" model="ir.ui.view">
            <field name="name">account.account.list.inherit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="name_arabic"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_form" model="ir.ui.view">
            <field name="name">account.account.form.inherit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[2]" position="replace">
                    <div>
                        <h1 style="font-size: 1.9rem;">
                            <div class="row">
                                <div class="col col-md-4">
                                    <label for="code" string="Code"/>
                                    <div>
                                        <field name="code" placeholder="e.g. 101000" class="oe_inline"/>
                                    </div>
                                </div>
                                <div class="col col-md-8">
                                    <label for="name" string="Account Name"/>
                                    <div>
                                        <field name="name"
                                                placeholder="e.g. Current Assets"
                                                class="oe_inline"
                                                style="width:80% !important;"/>
                                    </div>
                                </div>
                                <div class="col col-md-4">
                                </div>
                                <div class="col col-md-8">
                                    <label for="name_arabic" string="Arabic Name"/>
                                    <div>
                                        <field name="name_arabic"
                                                placeholder="e.g. Current Assets"
                                                class="oe_inline"
                                                style="width:80% !important;"/>
                                    </div>
                                </div>
                            </div>
                            <field name="company_id" invisible="1"/>
                        </h1>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
