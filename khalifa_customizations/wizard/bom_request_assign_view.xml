<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="bom_request_assign_form_view" model="ir.ui.view">
            <field name="name">bom.request.assign.form.view</field>
            <field name="model">bom.request.assign</field>
            <field name="arch" type="xml">
                <form name="bom_request_assign" string="BOM Request Assign">
                    <group>
                        <group>
                            <field name="bom_request_id"/>
                            <field name="assign_date"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="assign_bom" string="Assign" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
