<?xml version ="1.0" encoding="utf-8" ?>

<odoo>
    <record id="sh_mrp_config_cancel_form_inherit" model="ir.ui.view">
        <field name="name">sh.mrp.config.cancel.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='mrp']" position="inside">
                <h2>Manufacturing Cancel Configuration</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="mrp_operation_type" />
                            <div class="mt8">
                                <field name="mrp_operation_type" widget="radio" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
