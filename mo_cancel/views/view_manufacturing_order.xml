<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_manufacturing_order_extended_for_cancel_manufacturing_order">
        <field name="name">mrp.production.for.cancel.order.view</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="sh_cancel" states="confirmed,done,progress" type="object" string="Cancel All"/>
            </xpath>
            <xpath expr="//header//button[14][@name='action_cancel']" position="attributes">
                    <attribute name="attrs">
                        {'invisible': ['|', '|', ('id', '=', False), ('state', 'in', ('confirmed','progress','done', 'cancel')), ('confirm_cancel', '=', True)]}
                    </attribute>
                </xpath>
<!--            <xpath expr="//header//button[14][@name='action_cancel']" position="attributes">-->
<!--                    <attribute name="attrs">-->
<!--                        {'invisible': ['|', '|', ('id', '=', False), ('state', 'in', ('confirmed','progress','done', 'cancel')), ('confirm_cancel', '=', False)]}-->
<!--                    </attribute>-->
<!--                </xpath>-->
        </field>
    </record>
</odoo>
